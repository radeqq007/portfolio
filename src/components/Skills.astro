---
import { siJavascript, siTypescript, siTailwindcss, siVuedotjs, siReact, siGo, siPostgresql, siLinux, siArchlinux, siGit, siPhp, siLua} from 'simple-icons';
import type { SimpleIcon} from 'simple-icons';

const skills: SimpleIcon[] = [
  siJavascript,
  siTypescript,
  siTailwindcss,
  siVuedotjs,
  siReact,
  siGo,
  siPostgresql,
  siLinux,
  siArchlinux,
  siGit,
  siPhp,
  siLua,
];
---

<div class="card bg-bg-green-light dark:bg-bg-green-dark rounded-4xl lg:col-start-1 lg:col-span-2 row-start-2 row-span-2 p-6">
  <h2 class="text-text-primary text-5xl font-pacifico">skills</h2>
  <span class="flex flex-wrap gap-3 mt-5">
    {skills.map(skill =>
    <div class="bg-bg-light dark:bg-bg-dark text-text-secondary dark:text-bg-light px-5 py-2 rounded-xl font-roboto-mono grow text-center hover:scale-110 transition-all ease-in-out duration-200 flex gap-3 items-center justify-center">
      <svg
        role="img"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5"
        fill="currentColor"
      >
        <path d={skill.path} />
      </svg>
      {skill.title}
    </div>
    )}
  </span>
</div>
